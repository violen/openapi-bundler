{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test",
            "dependsOn": "rebuildTest"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "mvn -B clean",
            "group": "build"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "mvn -B compile",
            "group": "build"
        },
        {
            "label": "testCompile",
            "type": "shell",
            "command": "mvn -B test-compile",
            "group": "build"
        },
        {
            "label": "rebuild",
            "dependsOn": ["clean", "compile"],
            "dependsOrder": "sequence"
        },
        {
            "label": "rebuildTest",
            "dependsOn": ["clean", "compile", "testCompile"],
            "dependsOrder": "sequence"
        }
    ],
}